{
    "name": "04_prompt_generator",
    "description": "교안을 분석하여 AI 이미지 생성 도구용 슬라이드 생성 프롬프트를 교안별 개별 파일로 생성하는 5인 에이전트 팀",
    "version": "1.1",
    "default_category": "writing",
    "agents": ["P0_Orchestrator", "P1_Education_Structurer", "P2_Slide_Prompt_Architect", "P3_Visual_Spec_Curator", "P4_QA_Auditor"],
    "input_policy": {
        "required": "02_Material/*.md (N개, 파일 수 가변)",
        "optional": "03_Slides/ (IR, Glossary, DesignTokens, SequenceMap)"
    },
    "output_policy": {
        "mode": "per_file",
        "path": "04_SlidePrompt/",
        "filename_pattern": "{세션ID}_{세션제목}_슬라이드 생성 프롬프트.md",
        "count": "N개 (교안 파일당 1개)"
    },
    "agent_models": {
        "P0_Orchestrator":           { "category": "unspecified-low",   "note": "오케스트레이션/파일 조립 — 절차적 작업" },
        "P1_Education_Structurer":   { "category": "deep",              "note": "교육 구조 추출 — 깊은 분석력" },
        "P2_Slide_Prompt_Architect": { "category": "deep",              "note": "핵심 에이전트 — 교안→명세 정밀 변환" },
        "P3_Visual_Spec_Curator":    { "category": "visual-engineering", "note": "비주얼 스펙 — 시각 전문" },
        "P4_QA_Auditor":             { "category": "ultrabrain",         "note": "6-섹션 완결성 QA — 다관점 검증" }
    }
}
