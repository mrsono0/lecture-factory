# .agent/.env
# API Key configuration for Skills
# Usage: Copy this file to .env and fill in your keys.

# NotebookLM Configuration (Optional)
# Set to 'false' to see the browser during authentication/debugging
HEADLESS=false
SHOW_BROWSER=true

# Google Gemini API Key (Required for deep-research)
# Get from: https://aistudio.google.com/
GEMINI_API_KEY="your_gemini_api_key_here"

# Tavily API Key (Required for tavily-web)
# Get from: https://tavily.com/
TAVILY_API_KEY="your_tavily_api_key_here"

# Exa Search API Key (Optional, for exa-search)
EXA_API_KEY="your_exa_api_key_here"

# Firecrawl API Key (Optional, for firecrawl-scraper)
FIRECRAWL_API_KEY="your_firecrawl_api_key_here"

# Flowith Knowledge Garden API (Required for flowith-kb)
# Get from: https://flowith.io → Knowledge Garden → API Settings
FLOWITH_API_TOKEN="your_flowith_api_token_here"
FLOWITH_KB_LIST="your_kb_id_1,your_kb_id_2"
FLOWITH_MODEL="claude-opus-4.6"
